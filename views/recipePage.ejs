<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Recipe Ready</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
          aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item ml-2">
              <a class="nav-link" href="#">My Recipes</a>
            </li>
            <li>
              <form class="form-inline my-2 my-lg-0 ml-2">
                <input class="form-control mr-sm-2" type="text" placeholder="Find a recipe" aria-label="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
              </form>
            </li>
    
          </ul>
          <!--this will float right-->
    
        </div>
      </nav> <!-- /.navbar -->
    
      <main role="main" class="container pt-3">
    
    
        <div class="card mb-3 border-0">
          <div class="row no-gutters">
            <div class="col-md-6">
              <div class="card-body">
                <h1 class="card-title"><%= recipe.title %> </h1>
                <p class="card-text"><%= recipe.description %> </p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
            <div class="col-md-6">
              <img src="/example.jpeg" class="card-img" alt="an img">
            </div>
          </div>
        </div>
    
        <div class="container">
          <div class="row">
            <div class="col-sm-4 mt-5">
              <h2 class="">Ingredients</h2>
              <ul style="list-style-type: none; margin-left: 0; padding-left: 0;">
                <% recipe.ingredient.forEach((ingredient) => { %>
                <li class="border-bottom mb-3" style="padding-left: 42px;"><%= ingredient %> </li>
                <% }); %>
              </ul>
            </div>
    
            <div class="col-sm-7 ml-auto mt-5">
              <h2 style="margin-left: 0; padding-left: 0;">Directions</h2>
              <ol>
                <% recipe.method.forEach((step) => { %>
                <li class="mb-3"><%= step %> </li>
                <% }); %>
              </ol>
            </div>
          </div>
        </div>
    
</body>
</html>